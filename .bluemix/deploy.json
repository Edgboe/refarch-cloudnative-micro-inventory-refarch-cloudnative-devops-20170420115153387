{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Inventory Microservice Toolchain Deployment to Bluemix",
    "description": "inventory microservice toolchain",
    "longDescription": "Information entered here will be used at deployment time.",
    "type": "object",
    "properties": {
        "deploy-region": {
            "description": "Deploy to this Bluemix Region",
            "type": "string"
        },
        "deploy-org": {
            "description": "Deploy to this Bluemix Organization",
            "type": "string"
        },
        "deploy-space": {
            "description": "Deploy to this space",
            "type": "string"
        },
        "route-domain": {
            "description": "Domain name. Example: mybluemix.net for runtimes in US-South",
            "type": "string"
        },
        "mysql-ip": {
            "description": "MySQL IP address",
            "type": "string"
        },
        "mysql-port": {
            "description": "MySQL server port",
            "type": "string"
        },
        "mysql-dbuser": {
            "description": "MySQL database user",
            "type": "string"
        },
        "mysql-dbpass": {
            "description": "MySQL database user password",
            "type": "password"
        },
        "es-url": {
            "description": "Elasticsearch URL http(s)://host_ip:port",
            "type": "string"
        },
        "es-user": {
            "description": "Elasticsearch URL http(s)://host_ip:port",
            "type": "string"
        },
        "es-password": {
            "description": "Elasticsearch URL http(s)://host_ip:port",
            "type": "password"
        }
    },
    "required": [
        "deploy-region",
        "deploy-org",
        "deploy-space",
        "route-domain",
        "mysql-ip",
        "mysql-port",
        "mysql-dbuser",
        "mysql-dbpass",
        "es-url"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Domain name for all routes",
            "key": "route-domain"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Database IP",
            "key": "mysql-ip"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Database Port",
            "key": "mysql-port"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Database User",
            "key": "mysql-dbuser"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Database Password",
            "key": "mysql-dbpass"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Elasticsearch URL. i.e. http(s)://host:port",
            "key": "es-url"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Elasticsearch User",
            "key": "es-user"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Elasticsearch Password",
            "key": "es-password"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Region"
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "label",
                    "title": "Deploy to"
                },
                {
                    "type": "select",
                    "key": "deploy-region"
                },
                {
                    "type": "select",
                    "key": "deploy-org"
                },
                {
                    "type": "select",
                    "key": "deploy-space",
                    "readonly": false
                }
            ]
        }
    ]
}
